<% include partials/header %>


<div class="card text-center">
  <div class="card-header">
    <%= meme.name %>
  </div>
  <div class="card-body">
    <img class="card-img" src="<%= meme.image %>" alt="<%= meme.name %>">
    <p class="card-text"><%= meme.description %></p>
  </div>
  <div class="card-footer text-muted">
    <form action="/memes/<%= meme._id %>" method="post">
      <div class="form-group">
        <label for="author">Name</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        <input type="text" class="form-control" id="text" name="text" placeholder="Text">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>




<% meme.comments.forEach(function(comment){ %>
  <p>
    <strong><%= comment.author %></strong>
    - <%= comment.text %>
  </p>
<% }); %>

<% include partials/footer %>
