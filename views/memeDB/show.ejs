<% include partials/header %>

<h1><%= meme.name %></h1>

<img src="<%= meme.image %>">

<p><%= meme.description %></p>

<form action="/memes/<%= meme._id %>" method="post">
  <div class="form-group">
    <label for="author">Name</label>
    <input type="text" class="form-control" id="author" name="author" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="text">Text</label>
    <input type="text" class="form-control" id="text" name="text" placeholder="Text">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


<% meme.comments.forEach(function(comment){ %>
  <p>
    <strong><%= comment.author %></strong>
    - <%= comment.text %>
  </p>
<% }); %>

<% include partials/footer %>
